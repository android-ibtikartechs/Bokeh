<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="3dp"
    android:layout_margin="4dp">


    <LinearLayout
        android:id="@+id/lout_cont"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            >


        <ImageView
            android:id="@+id/im_product"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:src="@drawable/test_bouquet"
            />


            <LinearLayout
                android:id="@+id/lout_same_day_delivery"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:background="#70000000"
                android:visibility="gone"
                tools:visibility="visible"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ColorWhite"
                    android:text="Same Day delivery"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    />

            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="17dp"
                android:src="@drawable/ic_add_to_cart"
                android:visibility="gone"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/ColorGrayLine"
                ></LinearLayout>

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textSize="12sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/ColorTextBlack"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/tv_product_name"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="400"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#ff5c8d"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USD"
                    android:layout_marginStart="4dp"
                    android:textSize="10sp"
                    android:layout_gravity="bottom"
                    android:textColor="@color/ColorGrayDivider"
                    />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>