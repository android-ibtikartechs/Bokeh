<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="48dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                >

                <ImageView
                    android:id="@+id/btnClose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_close"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ColorTextBlack"
                    android:text="Sort"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    />

                <Button
                    android:id="@+id/btnApply"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_rounded_button"
                    android:text="Apply"
                    android:textAllCaps="false"
                    android:textColor="@color/ColorWhite"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/ColorGrayDivider"
                />



            <LinearLayout
                android:layout_marginStart="48dp"
                android:layout_marginEnd="48dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                >
            <RadioGroup
                android:id="@+id/radioGroupAscendDeascend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="ltr"
                android:orientation="horizontal"
                android:padding="0.5dp"
                android:background="@drawable/shape_gray_rounded_frame"

                >

                <RadioButton
                    android:id="@+id/radioAscending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:background="@drawable/selector_sort_radio_btn"
                    android:button="@android:color/transparent"
                    android:checked="true"
                    android:text="Ascending"
                    android:gravity="center"
                    android:textColor="@drawable/selector_text_sort_radio_btn"
                    />

                <RadioButton
                    android:id="@+id/radiodeascending"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_sort_radio_btn"
                    android:button="@android:color/transparent"
                    android:padding="8dp"
                    android:text="Descending"
                    android:textColor="@drawable/selector_text_sort_radio_btn"
                    />

            </RadioGroup>

            </LinearLayout>


            <RadioGroup
                android:id="@+id/radioGroupSortType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="ltr"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="48dp"
                >

                <RadioButton
                    android:id="@+id/radio_title"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:padding="4dp"
                    android:gravity="center"
                    android:background="@drawable/selector_sort_radio_btn"
                    android:button="@android:color/transparent"
                    android:checked="true"
                    android:text="Title"
                    android:textColor="@drawable/selector_text_sort_radio_btn"
                    />

                <RadioButton
                    android:id="@+id/radio_price"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:padding="4dp"
                    android:gravity="center"
                    android:background="@drawable/selector_sort_radio_btn"
                    android:button="@android:color/transparent"
                    android:text="Price"
                    android:textColor="@drawable/selector_text_sort_radio_btn"
                    />

                <RadioButton
                    android:id="@+id/radio_newest"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:padding="4dp"
                    android:gravity="center"
                    android:background="@drawable/selector_sort_radio_btn"
                    android:button="@android:color/transparent"
                    android:text="Newest"
                    android:textColor="@drawable/selector_text_sort_radio_btn"
                    />

            </RadioGroup>


        </LinearLayout>




</android.support.v7.widget.CardView>
